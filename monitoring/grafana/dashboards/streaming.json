{
  "dashboard": {
    "title": "Streaming System Monitoring",
    "tags": ["streaming", "flink", "ml"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Prediction Latency",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "model_prediction_latency_seconds{quantile=\"0.99\"} * 1000",
            "legendFormat": "p99",
            "refId": "A"
          },
          {
            "expr": "model_prediction_latency_seconds{quantile=\"0.95\"} * 1000",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "model_prediction_latency_seconds{quantile=\"0.50\"} * 1000",
            "legendFormat": "p50",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "decimals": 2
          }
        }
      },
      {
        "id": 2,
        "title": "Prediction Rate",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(model_predictions_total[5m])",
            "legendFormat": "predictions/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "decimals": 2
          }
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(model_prediction_errors_total[5m])",
            "legendFormat": "errors/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "decimals": 3
          }
        }
      },
      {
        "id": 4,
        "title": "Memory Usage",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "model_server_memory_usage_bytes / 1024 / 1024",
            "legendFormat": "MB",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "decimals": 2
          }
        }
      },
      {
        "id": 5,
        "title": "Risk Score Distribution",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "model_prediction_risk_score",
            "legendFormat": "current risk",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.5},
                {"color": "red", "value": 0.7}
              ]
            }
          }
        }
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "5s"
  }
}